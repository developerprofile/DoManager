<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="TaskManagerWPF.MainWindow"
        Title="Task Manager" d:DesignWidth="79585" Background="{x:Null}" Icon="pack://siteoforigin:,,,/Resources/TM.ico" Width="1000" Height="520">
    <Grid Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="853*"/>
            <ColumnDefinition Width="139*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnMarkNextTask" Content="Mark next task" HorizontalAlignment="Left" Height="29" Margin="26,42,0,0" VerticalAlignment="Top" Width="103" Click="btnMarkNextTask_Click" Grid.Column="1"/>
        <Button x:Name="btnStartNextTask" Content="Start next task" HorizontalAlignment="Left" Height="29" Margin="26,108,0,0" VerticalAlignment="Top" Width="103" Click="btnStartNextTask_Click" Grid.Column="1"/>
        <Button x:Name="btnFinishTask" Content="Finish task" HorizontalAlignment="Left" Height="29" Margin="26,142,0,0" VerticalAlignment="Top" Width="103" Click="btnFinishTask_Click" Grid.Column="1"/>
        <TextBox x:Name="tbNewTask" HorizontalAlignment="Left" Height="25" Margin="126,444,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="592"/>
        <Button x:Name="btnCreateTask" Content="Create new task" HorizontalAlignment="Left" Height="25" Margin="10,444,0,0" VerticalAlignment="Top" Width="111" Click="btnCreateTask_Click"/>
        <TextBox x:Name="tbNextTask" HorizontalAlignment="Left" Height="23" Margin="26,76,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="103" Grid.Column="1"/>
        <Button x:Name="btnOpenDb" Content="Open Db" HorizontalAlignment="Left" Height="29" Margin="26,9,0,0" VerticalAlignment="Top" Width="103" Click="btnOpenDb_Click" Grid.Column="1"/>
        <Button x:Name="btnLogDuration" Content="Log Duration" HorizontalAlignment="Left" Height="29" Margin="26,210,0,0" VerticalAlignment="Top" Width="103" Click="btnLogDuration_Click" Grid.Column="1"/>
        <DataGrid x:Name="taskGrid" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="429" Width="847" GotFocus="taskGrid_GotFocus" GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#FFB25D5D" AlternatingRowBackground="#FFBAF5FB" Grid.ColumnSpan="2" ColumnWidth="*" CellEditEnding="taskGrid_CellEditEnding" AutoGeneratingColumn="taskGrid_AutoGeneratingColumn"/>
        <Button x:Name="btnInterrupt" Content="Interrupt active task" HorizontalAlignment="Left" Margin="723,444,0,0" VerticalAlignment="Top" Width="134" Height="25" Click="btnInterrupt_Click" Grid.ColumnSpan="2"/>
        <DatePicker x:Name="dtPicker" Grid.Column="1" HorizontalAlignment="Left" Margin="26,244,0,0" Width="103" VerticalAlignment="Top"/>
    </Grid>



</Window>
